# Streamlit Secrets Configuration - Invoice Pipeline
# LOCAL DEVELOPMENT ONLY - NOT IN GIT
#
# USAGE: Copy this file to secrets.toml and fill in your values
#        cp secrets.toml.example secrets.toml
#
# CRITICAL: Never commit secrets.toml to git!

# ============================================================
# ADMIN AUTHENTICATION (Single Admin User)
# ============================================================
[admin]
email = "admin@yourdomain.com"
password = "YourSecurePassword123!"
full_name = "Admin User"

# ============================================================
# DATABASE CONNECTION
# ============================================================
[database]
host = "your-rds-endpoint.us-east-1.rds.amazonaws.com"
port = 5432
user = "postgres"
password = "YourRandomPassword123!"
database = "invoices"

# ============================================================
# AWS CONFIGURATION
# ============================================================
[aws]
region = "us-east-1"
s3_bucket = "your-invoice-bucket"
s3_prefix = "invoices/"

# ============================================================
# TEXTRACT SETTINGS
# ============================================================
[textract]
max_retries = 3
timeout_seconds = 300
